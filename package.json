{
  "name": "shaka-api",
  "version": "1.0.0",
  "description": "API robusta multi-tenant com motorização híbrida",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e",
    "test:api": "jest tests/integration/api --runInBand",
    "test:connections": "./scripts/test-connections.sh",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/infrastructure/database/config.js",
    "migration:revert": "npm run build && npx typeorm migration:revert -d dist/infrastructure/database/config.js",
    "migration:generate": "npx typeorm migration:generate -d src/infrastructure/database/config.ts"
  },
  "keywords": [
    "api",
    "microservices",
    "kubernetes"
  ],
  "author": "Shaka Team",
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.10.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.27",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
